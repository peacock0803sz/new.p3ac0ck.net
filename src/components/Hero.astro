import profileImg from "../../public/profile.jpg";

const { txt, href, aTxt } = Astro.props;
---

<div class="grid min-[500px]:grid-cols-10 pb-10">
  <div class="grid min-[500px]:col-span-7 md:col-span-8">
    <h1
      class="font-bold text-2xl min-[350px]:text-3xl min-[400px]:text-4xl lg:text-6xl xl:text-7xl"
    >
      ðŸ‘‹ I'm Yoichi Takai, <br /> a.k.a. "Peacock"
